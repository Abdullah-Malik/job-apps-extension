{
  "manifest_version": 3,
  "name": "Job Application Helper",
  "version": "1.1",
  "description": "Helps manage links and contacts for job applications with an improved UI experience.",
  "permissions": [
    "storage",
    "sidePanel",
    "tabs"
  ],
  "side_panel": { 
    "default_path": "popup.html"
  },
  "background": { 
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Application Helper"
  }
}